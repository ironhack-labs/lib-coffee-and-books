<div class="row intro">
    <div class="column">
        <h1>Create new place:</h1>
        <form action="/place/new" method="post">
            <div class="row">
                <div class="four columns">
                    <label for="name">Name</label>
                    <input class="u-full-width" type="text" name="name">
                </div>
                <div class="four columns">
                    <label for="type">Type</label>
                    <input placeholder="Must be coffee-shop or bookstore" class="u-full-width" type="text" name="type">
                </div>
                <div class="four columns">
                    <label for="type">Location</label>
                    <input placeholder="latitude" class="u-full-width" type="text" name="latitude">
                    <input placeholder="longitude" class="u-full-width" type="text" name="longitude">
                </div>
            </div>
            <div class="row">
                <div class="eleven columns">
                    <button>Create</button>
                </div>
            </div>
            <a href="/place">Go Back</a>
        </form>
    </div>
</div>